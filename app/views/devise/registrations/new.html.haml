%h2 Sign up 

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|

  #tabs
    %ul
      %li
        %a{ :href => '#tabs-1'}
          New Account
          
    #tabs-1
      #actions
        = render :partial => "devise/shared/links"
        
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
      
  = f.submit 'Sign Up'

- navigation_add 'New Account', new_user_registration_path



