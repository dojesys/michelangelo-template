%h2= t(:sign_up)

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f|

  #tabs
    %ul
      %li
        %a{ :href => '#tabs-1'}
          = t(:new_account)
          
          
    #tabs-1
      #sign-social
        = render :partial => "devise/shared/sign-social"
        
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
      %br/
      
  = f.submit t(:sign_up)

- navigation_add t(:new_account), new_user_registration_path



