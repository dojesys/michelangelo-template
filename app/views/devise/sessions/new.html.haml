%h2= t(:sign_in) 

= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :validate => true) do |f|

  #tabs
    %ul
      %li
        %a{ :href => '#tabs-1'}
          = t(:login)
          
    #tabs-1
      #actions
        = render :partial => "devise/shared/links"
        
      = f.input :email
      = f.input :password
      
      - if devise_mapping.rememberable?
        = f.input :remember_me, :as => :boolean
        %br/          
        = link_to t(:forgot_your_password), new_password_path(resource_name)
        
  = f.submit t(:sign_in)

- navigation_add t(:sign_in), new_user_registration_path
