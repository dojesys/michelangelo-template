- if user_signed_in?
  #user-gravatar
    = image_tag current_user.gravatar_url(:size => 25)
  #separator
    |
  - if current_user.profile.display_name
    #user-display-name
      = current_user.profile.display_name
    #separator
      |
  #user-email
    = current_user.email
  #separator
    |
  #user-inbox
    = t(:inbox)
    = link_to "0", profile_path(current_user.id) + "#tabs-3"
